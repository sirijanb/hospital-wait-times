    private class AccordionItem
    {
        public string Title { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }

    // Initialize the list of items based on your screenshot content
    private List<AccordionItem> Items = new List<AccordionItem>
{
new AccordionItem
{
Title = "Should I use the online wait times to determine where I should go?",
Content = "In the case of a serious emergency always call emergency services or go to your nearest emergency department. The online Emergency Wait Time tool is meant to give the public general information about emergency and urgent care wait times."
},
new AccordionItem
{
Title = "What if my condition isn't an emergency and I don't know where else to go?",
Content = "There are several other options for seeking care that includes walk-in and urgent care clinics. They are appropriate for conditions that need same-day attention but are not life-threatening. The hours of operation vary between clinics. Most start between 8:00 AM and 9:00 AM and are open until between 5:00 PM and 9:00 PM. Most have weekend hours as well. It is important to check the hours of the specific clinic you might be interested in."
},
new AccordionItem
{
Title = "How often are the online wait times, available beds and queue length updated?",
